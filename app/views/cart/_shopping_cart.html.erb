<div id="all">
  <div id="content">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <!-- breadcrumb-->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">


            </ol>
          </nav>
        </div>
        <div id="basket" class="col-lg-9">
          <div class="box">
            <form method="post" action="checkout1.html">
              <h1>Shopping cart</h1>
              <p class="text-muted">You currently have <%= @order_items.count %> item(s) in your cart.</p>
              <% if @order_items.count > 0 %>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th colspan="2">Product</th>
                        <th>Quantity</th>
                        <th>Unit price</th>
                        <th colspan="2">Total</th>
                      </tr>
                    </thead>
                    <% @order_items.each do |item| %>
                      <%= render 'cart/cart_row', item: item, show_total: true %>

                    <% end %>
                    <tfoot>
                      <tr>
                        <th colspan="5">Sub Total</th>
                        <th colspan="2"> <%= current_order.subtotal %> </th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <% else %>
                  <div class="">
                    <h1>No Items In Cart</h1>
                  </div>
                <% end %>
              <!-- /.table-responsive-->
              <div class="box-footer d-flex justify-content-between flex-column flex-lg-row">
                <div class="left"><a href="/inventories" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i> Continue shopping</a></div>
                <div class="right">
                  <%  if current_order.order_items.count > 0 %>
                    <%= link_to "Proceed To Checkout", edit_order_path(current_order), class: 'btn btn-primary' %>
                  <% end %>
                </div>
              </div>
            </form>
          </div>
          <!-- /.box-->
        </div>
        <!-- /.col-lg-9-->
        <div class="col-lg-3">
          <div id="order-summary" class="box">
            <div class="box-header">
              <h3 class="mb-0">Order summary</h3>
            </div>
            <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
            <div class="table-responsive">
              <table class="table">
                <tbody>
                  <tr>
                    <td>Order subtotal</td>
                    <th>$<%= current_order.subtotal %></th>
                  </tr>
                  <tr>
                    <td>Estimated Shipping </td>
                    <th>$25</th>
                  </tr>
                  <tr class="total">
                    <td>Estimated Total</td>
                    <th><%= current_order.subtotal + 25 %></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- /.col-md-3-->
      </div>
    </div>
  </div>
</div>
